@model MyProfile.Models.Other

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Other</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageSiteBarPath" />
            <input type="hidden" asp-for="CvPath" />
            <div class="form-group mb-3">
                <label asp-for="CvFile" class="control-label"></label>
                <br />
                <iframe width="600" height="300" class="embed-responsive-item" src="@Url.Content("/assets/Image/ImageAndFileOther/"+Model.CvPath)" allowfullscreen></iframe>
                <br />
                <input asp-for="CvFile" class="form-control" accept="application/pdf" />
                <span asp-validation-for="CvFile" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageSiteBarFile" class="control-label"></label>
                <br />
                <img src="@Url.Content("/assets/Image/ImageAndFileOther/"+Model.ImageSiteBarPath)" class="img-thumbnail" width="350" height="600" />
                <br />
                <input asp-for="ImageSiteBarFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageSiteBarFile" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ResumeId" class="control-label"></label>
                <select asp-for="ResumeId" class="form-control" asp-items="ViewBag.ResumeId"></select>
                <span asp-validation-for="ResumeId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-warning" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

<br />
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
