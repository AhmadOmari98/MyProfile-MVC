@model IEnumerable<MyProfile.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Projects Table</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary btn-sm float-end">Create New Project</a>
    <br />
</p>
<table class="table table-hover"
       id="table"
       data-show-export="true"
       data-export-types="['json', 'xml','csv', 'txt', 'sql', 'doc', 'excel', 'pdf']"
       data-export-options='{"fileName": "TableFile"}'
       data-show-columns="true"
       data-show-toggle="true"
       data-search="true"
       data-pagination="true"
       data-resizable="true"
       data-show-pagination-switch="true"
       data-show-fullscreen="true"
       data-show-print="true"
       data-show-copy-rows="true">
    <thead>
        <tr class="text-center table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectLogoPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <textarea rows="5" class="form-control" style="width:300px" readonly>@Html.DisplayFor(modelItem => item.Description)</textarea>
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.Link)" target="_blank"> Link </a>
            </td>
            <td>
                <img asp-append-version="true" class="img-thumbnail" src="@Url.Content("./assets/Image/ProjectLogo/"+item.ProjectLogoPath)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resume.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="text-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<br />
<br />
<script>

    $(function () {
        $('#table').bootstrapTable()
    })


</script>