@model MyProfile.Models.Certification

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details Certification</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InstitutionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InstitutionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InstitutionLogoPath)
        </dt>
        <dd class = "col-sm-10">

            <img asp-append-version="true" class="img-thumbnail" src="@Url.Content("/assets/Image/certificationPath/"+Model.InstitutionLogoPath)" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.Link" target="_blank">@Html.DisplayFor(model => model.Link)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCourse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCourse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resume)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resume.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="text-warning">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
