@model IEnumerable<MyProfile.Models.Certification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Certifications Table</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary btn-sm float-end">Create New Certification</a>
    <br />
</p>
<table class="table table-hover"
       id="table"
       data-show-export="true"
       data-export-types="['json', 'xml','csv', 'txt', 'sql', 'doc', 'excel', 'pdf']"
       data-export-options='{"fileName": "TableFile"}'
       data-show-columns="true"
       data-show-toggle="true"
       data-search="true"
       data-pagination="true"
       data-resizable="true"
       data-show-pagination-switch="true"
       data-show-fullscreen="true"
       data-show-print="true"
       data-show-copy-rows="true">
    <thead>
        <tr class="text-center table-dark">
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstitutionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstitutionLogoPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCourse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstitutionName)
            </td>
            <td>
               <img asp-append-version="true" class="img-thumbnail" src="@Url.Content("./assets/Image/certificationPath/"+item.InstitutionLogoPath)" />
            </td>
            <td>
                 <a href="@item.Link" target="_blank">Link</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCourse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resume.Name)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="text-info" >Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<br />
<br />
<script>

    $(function () {
        $('#table').bootstrapTable()
    })


</script>