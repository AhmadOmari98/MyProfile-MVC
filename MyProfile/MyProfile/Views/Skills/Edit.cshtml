@model MyProfile.Models.Skill

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Skill</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <div class="form-group col-4">
                    <label asp-for="SkillName" class="control-label"></label>
                    <input asp-for="SkillName" class="form-control" />
                    <span asp-validation-for="SkillName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="ResumeId" class="control-label"></label>
                    <select asp-for="ResumeId" class="form-control" asp-items="ViewBag.ResumeId"></select>
                </div>
            </div>
            <div class="form-group float-end">
                <a asp-action="Index">Back to List</a> | 
                <input type="submit" value="Save" class="btn btn-warning " />
                
            </div>
        </form>
    </div>
</div>

<br />
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
