@model MyProfile.Models.Language

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create New Language</h1>

<h4></h4>
<hr />
<div class="row container">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="form-group col-6">
                    <label asp-for="LanguageName" class="control-label"></label>
                    <input asp-for="LanguageName" class="form-control" />
                    <span asp-validation-for="LanguageName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                <label asp-for="ResumeId" class="control-label"></label>
                <select asp-for="ResumeId" class ="form-control" asp-items="ViewBag.ResumeId"></select>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

<br />
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
