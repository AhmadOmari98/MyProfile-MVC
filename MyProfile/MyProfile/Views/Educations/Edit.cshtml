@model MyProfile.Models.Education

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Education</h1>

<hr />
<div class="row container">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="InstitutionLogoPath" />

            <div class="row mb-3">
                <div class="form-group col-4">
                    <label asp-for="DegreeName" class="control-label"></label>
                    <input asp-for="DegreeName" class="form-control" />
                    <span asp-validation-for="DegreeName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="SectionName" class="control-label"></label>
                    <input asp-for="SectionName" class="form-control" />
                    <span asp-validation-for="SectionName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Grade" class="control-label"></label>
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="Institution" class="control-label"></label>
                <input asp-for="Institution" class="form-control" />
                <span asp-validation-for="Institution" class="text-danger"></span>
            </div>
            <img src="@Url.Content("/assets/Image/InstitutionLogo/"+Model.InstitutionLogoPath)" class="img-thumbnail rounded mt-1 mb-1" width="200" height="200" />
            <div class="form-group  mb-3">
                <label asp-for="LogoFile" class="control-label"></label>
                <input asp-for="LogoFile" class="form-control" />
                <span asp-validation-for="LogoFile" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="form-group col-6">
                    <label asp-for="DateFrom" class="control-label"></label>
                    <input asp-for="DateFrom" class="form-control" />
                    <span asp-validation-for="DateFrom" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="DateTo" class="control-label"></label>
                    <input asp-for="DateTo" class="form-control" />
                    <span asp-validation-for="DateTo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ResumeId" class="control-label"></label>
                <select asp-for="ResumeId" class="form-control" asp-items="ViewBag.ResumeId"></select>
                <span asp-validation-for="ResumeId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" /> | 
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

<br />
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
