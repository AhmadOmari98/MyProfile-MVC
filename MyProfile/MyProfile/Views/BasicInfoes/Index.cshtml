@model IEnumerable<MyProfile.Models.BasicInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Basics-Infos Table</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary btn-sm float-end">Create New Basic-Info</a>
    <br />
</p>
<table class="table table-hover"
       id="table"
       data-show-export="true"
       data-export-types="['json', 'xml','csv', 'txt', 'sql', 'doc', 'excel', 'pdf']"
       data-export-options='{"fileName": "TableFile"}'
       data-show-columns="true"
       data-show-toggle="true"
       data-search="true"
       data-pagination="true"
       data-resizable="true"
       data-show-pagination-switch="true"
       data-show-fullscreen="true"
       data-show-print="true"
       data-show-copy-rows="true">
    <thead>
        <tr class="text-center table-dark">

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkLinkedin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkGitHub)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutMe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
               
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="text-center">
            <td>
                  @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                 <a href="@Html.DisplayFor(modelItem => item.LinkLinkedin)" target="_blank"> Link </a>
            </td>
            <td>
                 <a href="@Html.DisplayFor(modelItem => item.LinkGitHub)" target="_blank"> Link </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                    <textarea rows="3" readonly class="text-justify"> @Html.DisplayFor(modelItem => item.AboutMe) </textarea>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
               <img asp-append-version="true" class="img-thumbnail" src="@Url.Content("./assets/Image/ImageUser/"+item.ImagePath)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resume.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="text-info" >Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<br />
<br />
<br />
<script>

    $(function () {
        $('#table').bootstrapTable()
    })


</script>